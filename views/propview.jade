//- Button trigger modal
button(type="button", data-toggle="modal", data-target="#myModal") Launch demo modal

a(href="#property", data-toggle="modal", data-target="#modal", onclick = '$("#mymodal").modal("show");') launch demo modal

//- Modal
.modal.fade(id="myModal", tabindex="-1", role="dialog", aria-labelledby="myModalLabel")
	.modal-dialog(role="document")
		.modal-content
			.modal-header
				button.close(type="button", data-dismiss="modal", aria-label="Close")
						span(aria-hidden="true") &times;
				h.modal-title(id="myModalLabel") Modal title
			.modal-body text goes here
			.modal-footer
				button.btn.btn-default(type="button", data-dismiss="modal") Close
				button.btn.btn-primary(type="button") Save changes